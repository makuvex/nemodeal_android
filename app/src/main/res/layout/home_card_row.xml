<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

    <com.google.android.gms.ads.formats.UnifiedNativeAdView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ad_root_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/ad_app_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
        </FrameLayout>
    </com.google.android.gms.ads.formats.UnifiedNativeAdView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">


        <ImageView
                android:id="@+id/site_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/frame_site_image_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

        <TextView
                android:id="@+id/category"
                android:text="카테고리"
                android:textSize="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/site_icon"
                app:layout_constraintBottom_toBottomOf="@id/site_icon"
                app:layout_constraintLeft_toRightOf="@id/site_icon"
                />

        <TextView
                android:id="@+id/invalid_item"
                android:text="[종료된 상품]"
                android:textSize="14dp"
                android:textColor="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="@id/category"
                app:layout_constraintRight_toLeftOf="@id/thumbnail"
        />

        <TextView
                android:id="@+id/title"
                android:text="학교이름"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:maxLines="2"
                app:layout_constraintTop_toBottomOf="@id/site_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/thumbnail"
                app:layout_constraintBottom_toTopOf="@id/comment_image"
                />

        <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="1dp"
                android:background="@drawable/frame_image_view"
                android:cropToPadding="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        <ImageView
                android:id="@+id/comment_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/comment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                />
        <TextView
                android:id="@+id/comment_count"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/comment_image"
                app:layout_constraintBottom_toBottomOf="@id/comment_image"
                app:layout_constraintLeft_toRightOf="@id/comment_image"
        />
        <ImageView
                android:id="@+id/like_image"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_marginLeft="20dp"
                android:background="@drawable/like"
                app:layout_constraintTop_toTopOf="@id/comment_image"
                app:layout_constraintBottom_toBottomOf="@id/comment_image"
                app:layout_constraintLeft_toRightOf="@id/comment_count"
        />
        <TextView
                android:id="@+id/like_count"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/like_image"
                app:layout_constraintBottom_toBottomOf="@id/like_image"
                app:layout_constraintLeft_toRightOf="@id/like_image" />
        <ImageView
                android:id="@+id/unlike_image"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_marginLeft="20dp"
                android:background="@drawable/unlike"
                app:layout_constraintTop_toTopOf="@id/comment_image"
                app:layout_constraintBottom_toBottomOf="@id/comment_image"
                app:layout_constraintLeft_toRightOf="@id/like_count" />
        <TextView
                android:id="@+id/unlike_count"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/unlike_image"
                app:layout_constraintBottom_toBottomOf="@id/unlike_image"
                app:layout_constraintLeft_toRightOf="@id/unlike_image"
        />
        <TextView
                android:id="@+id/reg_date"
                android:text="오늘"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="@id/unlike_image"
                app:layout_constraintBottom_toBottomOf="@id/unlike_image"
                app:layout_constraintRight_toLeftOf="@id/thumbnail"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/dimmed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000">



    </View>
